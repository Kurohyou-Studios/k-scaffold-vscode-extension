{
  "name": "kscaffold",
  "displayName": "K-scaffold Sheet Framework",
  "description": "Syntax Highlighting and Code Snippets for the K-scaffold sheet framework",
  "version": "0.0.3",
  "publisher": "kurohyou-studios",
  "icon": "./images/k-90b.png",
  "license": "MIT",
  "engines": {
    "vscode": "*"
  },
  "categories": [
      "Programming Languages",
      "Language Packs",
      "Visualization",
      "Other"
  ],
  "keywords": [
      "Roll20",
      "TTRPG",
      "RPG",
      "syntax highlight"
  ],
  "contributes": {
    "grammars": [
      {
        "scopeName": "k-scaffold.injection",
        "injectTo": ["text.pug"],
        "path": "./syntaxes/kscaffold.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.javascript": "javascript"
        }
      }
    ],
    "snippets":[
      {
        "language": "jade",
        "path": "./snippets/pug/documentation.json"
      },
      {
        "language": "jade",
        "path": "./snippets/pug/mixins.json"
      },
      {
        "language": "jade",
        "path": "./snippets/pug/rolltemplates.json"
      },
      {
        "language": "jade",
        "path": "./snippets/pug/templates.json"
      },
      {
        "language": "jade",
        "path": "./snippets/js/sheetworkers.json"
      },
      {
        "language": "jade",
        "path": "./snippets/js/templates.json"
      },
      {
        "language": "jade",
        "path": "./snippets/js/utilities.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/js/sheetworkers.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/js/templates.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/js/utilities.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kurohyou-Studios/k-scaffold-vscode-extension"
  }
}